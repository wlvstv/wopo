<div class="modal fade" id="newCommandModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newCommandLabel">New Command</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="#newCommandInputGroup">Command:</label>
          <div class="input-group" id="newCommandInputGroup">
            <div class="input-group-prepend">
              <span class="input-group-text" id="commandPrefix">
                !
              </span>
            </div>
            <input type="text" class="form-control" id="newCommand" placeholder="Command">
          </div>
          <div class="form-group">
            <label for="#newResponse">Response:</label>
            <textarea class="form-control" name="newResponse" id="newResponse" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label for="#isMod">Mod Command?</label>
            <input type="checkbox" id="isMod">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="btnCreateCommand">Create</button>
      </div>
    </div>
  </div>
</div>